{% extends 'base.jinja' %}

<!-- user_edit.jinja - for testing purposes -->

{% block title %}
<h1>Edit User</h1>
{% endblock %}

{% block content %}

<form >
    <label>First Name
        <input name="first_name" type="text" placeholder="{{ user.first_name }}"
        class="form-input">
    </label>

    <label>Last Name
        <input name="last_name" type="text" placeholder="{{ user.last_name }}"
        class="form-input">
    </label>

    <label>Image URL
        <input name="img_url" type="text" placeholder="{{ user.image_url }}"
        class="form-input">
    </label>
        <button type="submit" formmethod="POST" formaction="/users/{{ user.id }}/edit">Confirm</button>
        <button type="submit" formmethod="GET" formaction="/users/{{ user.id }}">Cancel</button>
</form>

{% endblock %}