{% block title %}
<h1>Add Post for {{ user.get_full_name() }}</h1>
{% endblock %}

{% block content %}

<form >
    <label>Title
        <input
            name="title"
            type="text"
            required
            class="form-input"
        >
    </label>

    <label>Content
        <input
            name="content"
            type="text"
            required
            class="form-input"
        >
    </label>
    <button
        type="submit"
        formmethod="POST"
        formaction="TBD"
    >
        Confirm
    </button>
    <button
        type="submit"
        formmethod="GET"
        formaction="TBD"
    >
        Cancel
    </button>
</form>

{% endblock %}
